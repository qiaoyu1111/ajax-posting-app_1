<p><a id="my-open-click">Open Now</a></p>

<div id="foo" style="border: 1px solid red;">
  <a id="my-hide-click">Hide Now</a>
  <p>bar</p>
</div>


<script>
  $("#foo").hide();
  console.log("checkpoint 1")

  $("#my-open-click").click(function(){
